{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"], // Include standard built-in objects and DOM APIs
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src", "types"]
}
